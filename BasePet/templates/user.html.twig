{% extends "layout.html.twig" %}

{% block title %}
    Users
{% endblock %}


{% block content %}

 <!-- User -->
  <section class="page-section" id="user">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Utilisateurs</h2>
        </div>
        <div >
        <h4 id="userSection">La Liste des Utilisateurs</h4>
          <table class="table" id="usertab">
            
              <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">City</th>
                <!--<th scope="col">mailType</th>-->
              </tr>
            
            <tbody>
              {% for listu in listuser %}
              <tr>
                <th scope="row">{{listu.iduser}}</th>
                <td>{{listu.lastname}}</td>
                <td>{{listu.firstname}}</td>
                <td>{{listu.city}}</td>
                <!--<td></td>-->
              </tr>
              {% endfor %}
              <tr>
                <td colspan="4">
                  <ul class="pagination justify-content-center">
                    <li class="page-item disabled ">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    
                    <li class="page-item">
                        <a class="page-link" href="#">{{listuser[0].iduser}}</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href='/user'+{{listuser[0].iduser}} aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                  </ul>
              </tr>
            </tbody>
          </table>
      <div>
      </div>
    </div>
  </section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script> 



$(document).ready(function(){
  $("#userSection").click(function(){
    $("#usertab").slideToggle("slow");
  });
});
</script>



{% endblock %}



